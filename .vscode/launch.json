    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["client", "--server", "127.0.0.1", "Param_1"]
        },
        {
            "name": "Launch backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["backend", "--listenaddr", "127.0.0.1:8001", "--response", "PONG"]
        }
    ]
}