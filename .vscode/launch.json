    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "client",
                "--server",
                "127.0.0.1",
                "Param_1"
            ]
        },
        {
            "name": "Launch k8s client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "client",
                "http://backend:55501/ping",
                "http://backend:55501/ping",
                "http://backend:55501/ping"
            ],
            "env": {
                "SERVER": "opentracing-example.kind-01.company.com",
                "INSTANCE": "client-1",
                "JAEGERURL": "-",
                "OTLPURL": "http://tempo.kind-01.company.com"
            }
        },
        {
            "name": "Launch backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "backend",
                "--listenaddr",
                "127.0.0.1:55501",
                "--instance",
                "backend-1",
                "--response",
                "PONG_1"
            ]
        },
        {
            "name": "Launch frontend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "frontend",
                "--listenaddr",
                "127.0.0.1:55500",
                "--instance",
                "frontend-1",
            ]
        }
    ]
}